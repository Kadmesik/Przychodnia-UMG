<UserControl x:Class="PolMedUMG.View.PasswordRecovery"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
             xmlns:view="clr-namespace:PolMedUMG.View"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">

    <Border CornerRadius="25" Width="750" Height="400" Background="Gray" Margin="0,60,0,0">
        <StackPanel >
            <TextBlock Text="Zapomniałeś hasła?" 
               FontSize="28" 
               FontWeight="Bold" 
               Foreground="Black" 
               HorizontalAlignment="Center" 
               Margin="0,85,0,10"/>

            <TextBlock Text="Spokojnie, podaj nam swój login lub adres e-mail, a my pomożemy Ci odzyskać hasło"
               FontSize="16" 
               Foreground="Black" 
               HorizontalAlignment="Center" 
               TextAlignment="Center"
               TextWrapping="Wrap"
               Margin="40,0,0,20"/>
            
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0" >
                <Border Width="60" Height="60" CornerRadius="30" Background="White">
                    <fa:ImageAwesome Icon="User" Margin="12"/>
                </Border>
                <Border Background="White" CornerRadius="10" Height="30" Margin="-14">
                    <TextBox x:Name="loginInput" Width="300" Height="30" Background="Transparent" BorderThickness="0" Padding="15,30,0,0" FontSize="23" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
                </Border>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" >
                <Button x:Name="goBack"
                    BorderThickness="0"
                    Foreground="Black"
                    FontSize="18"
                    Content="wróć"
                    FontFamily="Century Gothic"
                    Cursor="Hand"
                    Click="go_Back"
                    Margin="0,20,0,0"
                    Command="{Binding LoginCommand}">


                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFE2E2E2" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="150" Height="40" CornerRadius="15" Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <TextBlock Width="300" Height="40" ></TextBlock>
                <Button x:Name="goNext"
                    BorderThickness="0"
                    Foreground="Black"
                    FontSize="18"
                    Content="dalej"
                    FontFamily="Century Gothic"
                    Cursor="Hand"
                    Margin="0,20,0,0">


                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFE2E2E2" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="150" Height="40" CornerRadius="15" Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>

</UserControl>