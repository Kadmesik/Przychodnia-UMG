<UserControl x:Class="PolMedUMG.View.Calendar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:PolMedUMG.ViewModel"
    xmlns:System="clr-namespace:System;assembly=System.Runtime"
    xmlns:local="clr-namespace:PolMedUMG.ViewModel"
    xmlns:controls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
    mc:Ignorable="d"
    d:DataContext="
             {
             d:DesignInstance d:Type=local:CalendarModel
             IsDesignTimeCreatable=True}"
             >

    <ItemsControl ItemsSource="{Binding Months}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <UniformGrid Rows="4" Columns="3"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>

        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Calendar DisplayDate="{Binding .}"
                          DisplayMode="Month"
                          DisplayModeChanged="Calendar_DisplayModeChanged"
                          Margin="5"
                          BorderBrush="Gray"
                          BorderThickness="1"/>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>